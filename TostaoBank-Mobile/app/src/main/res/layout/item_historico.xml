<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txtDataTransferencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00/00/0000"
            android:background="@drawable/bg_texto"
            android:textColor="@color/white"
            android:textSize="15sp"
            />

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTipoTransferencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo Transferencia"
                    android:textSize="15sp"
                    android:textColor="@color/material_dynamic_neutral40"
                    />

                <TextView
                    android:id="@+id/txtDescTransferencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desc Transferencia"
                    android:textSize="15sp"
                    android:textColor="@color/material_dynamic_neutral40"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/txtValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor Transferencia"
                android:textSize="15sp"
                android:textColor="@color/material_dynamic_neutral40"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
